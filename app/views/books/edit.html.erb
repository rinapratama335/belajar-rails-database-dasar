<%= form_for(@book) do |f| %>
  <%= f.label :title %><br />
  <%= f.text_field :title %><br />

  <%= f.label :description %><br />
  <%= f.text_area :description %><br />

  <%= f.label :page %><br />
  <%= f.text_field :page %><br />

  <%= f.label :price %><br />
  <%= f.text_field :price %><br />

  <%= f.submit 'Save' %>
<% end %>
